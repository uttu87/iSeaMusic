<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" >
    </ListView>

    <com.tsutaya.musicplayer.cloud.utils.AutoScroller
        android:id="@+id/new_limiter_scroller"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/new_limiter_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" />
    </com.tsutaya.musicplayer.cloud.utils.AutoScroller>

    <ListView
        android:id="@+id/actual_list_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/new_limiter_scroller"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="6dp"
        android:paddingTop="4dp" 
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/list_view_loading_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#50000000"
        android:gravity="center"
        android:text="@string/loading_cloud_folder"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_playback"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imgDisk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_disk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgBtnPlay"
            android:layout_toRightOf="@+id/imgDisk"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/tvTitle"
                android:text="@string/unknown"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/tvArtist"
                android:text="@string/unknown" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgBtnPlay"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:onClick="play"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_action_play"
            android:layout_marginRight="10dp"
            android:text="Play" />
    </RelativeLayout>

</RelativeLayout>