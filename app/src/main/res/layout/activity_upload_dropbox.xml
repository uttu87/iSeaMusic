<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffffff">
    <LinearLayout 
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_actionbar_height"
        android:orientation="horizontal"
        android:background="#092253"
        android:paddingLeft="@dimen/widget_actionbar_separator_horizontal_margin"
        android:paddingRight="@dimen/widget_actionbar_separator_horizontal_margin"
        android:paddingTop="@dimen/widget_actionbar_separator_vertical_margin"
        android:paddingBottom="@dimen/widget_actionbar_separator_vertical_margin"
        android:gravity="center">
         <TextView 
        android:id="@+id/bar_left_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#ffffffff"
        android:text="@string/cancel" 
        android:layout_marginLeft="10dp"/>
          <TextView 
		        android:id="@+id/bar_text_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffffffff"
		        android:layout_weight="1"
		        android:text="@string/clould_dropbox_upload_title"
		        android:textSize="18dp"
		        android:gravity="center_horizontal"/>
	      <TextView 
		      android:id="@+id/bar_right_item"
		      android:layout_width="wrap_content"
		      android:layout_weight="1"
		      android:layout_height="wrap_content"
		      android:gravity="right"
		      android:textColor="#ffffffff"
		      android:text="@string/pause_upload"
		      android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/txtSMS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="5dp"/>
	<ListView android:id="@+id/listMediaToUploadToDropbox"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:cacheColorHint="#00000000"
              android:listSelector="@android:color/transparent"/>
</LinearLayout>
